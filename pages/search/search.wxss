/* pages/search/search.wxss */
/* 搜索栏 */
.searchBar {
  background-color: #42bd56;
  padding:10rpx 20rpx;
}
.searchMain {
  display: flex;
  border-radius: 10rpx;
  background-color:#fff;
  align-items: center;
  overflow: hidden;
}
.searchMain text {
  padding: 10rpx;
  color: #ccc;
}
.searchInput {
  background-color: #fff;
  padding: 10rpx 0;
  font-size: 26rpx;
  flex:1
}
/* 搜索栏End*/

/* 搜索结果 */
.searchList {

}

.searchItem {
  padding: 0 30rpx;
  padding-bottom: 0;
}

.itemBox {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ccc;
}

.itemImg {
  width: 150rpx!important;
  height: 200rpx;
  margin-right: 30rpx;
  flex-shrink: 0
}

.itemTitle {
  font-size: 36rpx;
}

.starBox {
  display: flex;
}

.rating {
  display: flex;
  padding: 20rpx 0; 
  line-height: 30rpx;
}

.starBox image {
  width: 30rpx;
}

.average {
  color: #999;
  margin-left: 20rpx;
}

.intro {
  color: #999;
  font-size: 26rpx;
}
/* 搜索结果End */

